<%- include('partials/header') %>

<div class="centered-container">
  <div class="jumbotron text-center">
    <i class="fas fa-pen-nib fa-4x mb-4 text-primary"></i>
    <h1 class="display-4">Share a Secret</h1>
    <p class="text-muted mb-5">Your secret is safe with us. Share it anonymously below.</p>

    <form action="/submit" method="POST">
      <div class="form-group">
        <input type="text" class="form-control form-control-lg text-center" name="secret" placeholder="Type your secret here..." autocomplete="off">
      </div>
      <button type="submit" class="btn btn-dark btn-lg mt-3">Submit Secret</button>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
